# Top-level EditorConfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 120

[*.java]
indent_size = 4

[*.groovy]
indent_size = 4

[*.xml]
indent_size = 2

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.properties]
indent_size = 2

[*.sh]
indent_size = 2

[*.{bat,cmd}]
indent_size = 2